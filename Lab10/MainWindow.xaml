<Window x:Class="Lab10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <CheckBox x:Name="cbxCurrentAcc" Content="Current Accounts" HorizontalAlignment="Left" Margin="90,61,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbxSavingsAcc" Content="Saving Accounts" HorizontalAlignment="Left" Margin="213,61,0,0" VerticalAlignment="Top"/>
        <Label Content="Accont Details" HorizontalAlignment="Left" Margin="528,99,0,0" VerticalAlignment="Top"/>
        <Label Content="First Name" HorizontalAlignment="Left" Margin="535,141,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblkFirstName" HorizontalAlignment="Left" Margin="622,146,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Label Content="Intrest Date" HorizontalAlignment="Left" Margin="535,312,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblkInsertData" HorizontalAlignment="Left" Margin="622,317,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Label Content="Balance" HorizontalAlignment="Left" Margin="535,273,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblkBalance1" HorizontalAlignment="Left" Margin="622,278,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Label Content="Account Type" HorizontalAlignment="Left" Margin="535,229,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblkAccoutType" HorizontalAlignment="Left" Margin="622,234,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Label Content="Balance" HorizontalAlignment="Left" Margin="535,196,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblkBalance" HorizontalAlignment="Left" Margin="622,204,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Label Content="Last Name" HorizontalAlignment="Left" Margin="535,170,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblkLastName" HorizontalAlignment="Left" Margin="622,175,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Label Content="Transaction Amount" HorizontalAlignment="Left" Margin="535,350,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxTransactionAmount" HorizontalAlignment="Left" Margin="656,354,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="lbxAllData" Margin="90,112,0,139" HorizontalAlignment="Left" Width="244" SelectionChanged="lbxAllData_SelectionChanged"/>
        <Button x:Name="btnWithdraw" Content="Withdraw" HorizontalAlignment="Left" Margin="716,92,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnDeposit" Content="Deposit" HorizontalAlignment="Left" Margin="716,61,0,0" VerticalAlignment="Top" Width="54.9933333333333"/>
        <Button x:Name="btnIntrest" Content="Intrest" HorizontalAlignment="Left" Margin="716,126,0,0" VerticalAlignment="Top" Width="54.9933333333333"/>
    </Grid>
</Window>
